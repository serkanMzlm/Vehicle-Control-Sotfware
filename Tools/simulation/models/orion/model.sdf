<?xml version="1.0" encoding="utf-8"?>
<sdf version="1.6">
    <model name="orion">
        <link name="base_link">
            <inertial>
                <pose>0 0 0 0 0 0</pose>
                <mass>1.50</mass>
                <inertia>
                    <ixx>0.0035705</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.0057545</iyy>
                    <iyz>0</iyz>
                    <izz>0.008425</izz>
                </inertia>
            </inertial>
            <visual name="base_link_visual">
                <pose>0.005 0 -0.031 0 0 0</pose>
                <geometry>
                    <mesh>
                        <uri>meshes/body.dae</uri>
                    </mesh>
                </geometry>
            </visual>
            <collision name="base_link_collision">
                <geometry>
                    <box>
                        <size>0.206 0.158 0.060</size>
                    </box>
                </geometry>
            </collision>
        </link>

         <!--Sensors And Kamera-->
        <link name="hc_sr04_right_link">
            <pose relative_to="base_link">0.094 -0.044 0.003 1.55 0 1.41</pose>
            <inertial>
                <mass>0.1</mass>
                <inertia>
                    <ixx>0.00003126</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.00003126</iyy>
                    <iyz>0</iyz>
                    <izz>0.00005445</izz>
                </inertia>
            </inertial>
            <visual name="visual">
                <geometry>
                    <mesh>
                        <uri>meshes/hc_sr04.dae</uri>
                    </mesh>
                </geometry>
            </visual>
            <sensor name="hc_sr04_right" type="gpu_lidar">
                <pose>0 0 0 0 -1.57 0</pose>
                <visualize>true</visualize>
                <update_rate>20</update_rate>
                <topic>hc_sr04_right_distance</topic>
                <lidar>
                    <scan>
                        <horizontal>
                            <samples>1</samples>
                            <resolution>1</resolution>
                            <min_angle>0</min_angle>
                            <max_angle>0</max_angle>
                        </horizontal>
                        <vertical>
                            <samples>1</samples>
                            <resolution>1</resolution>
                            <min_angle>0</min_angle>
                            <max_angle>0</max_angle>
                        </vertical>
                    </scan>
                    <range>
                        <min>0.02</min>
                        <max>4.0</max>
                        <resolution>0.1</resolution>
                    </range>
                    <noise>
                        <type>gaussian</type>
                        <mean>0</mean>
                        <stddev>0.01</stddev>
                    </noise>
                </lidar>
            </sensor>
        </link>
        <link name="hc_sr04_left_link">
            <pose relative_to="base_link">0.094 0.04 0.003 1.55 0 1.78</pose>
            <inertial>
                <mass>0.1</mass>
                <inertia>
                    <ixx>0.00003126</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.00003126</iyy>
                    <iyz>0</iyz>
                    <izz>0.00005445</izz>
