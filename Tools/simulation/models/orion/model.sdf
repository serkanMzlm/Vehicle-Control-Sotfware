        <link name="right_back_wheel_link">
            <pose relative_to="base_link"> -0.07 -0.092 -0.012 1.57 0 0</pose>
            <inertial>
                <mass>0.1</mass>
                <inertia>
                    <ixx>0.00003126</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
