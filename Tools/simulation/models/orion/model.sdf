                </geometry>
            </visual>
            <sensor name="hc_sr04_left" type="gpu_lidar">
                <pose>0 0 0 0 -1.57 0</pose>
                <visualize>true</visualize>
                <update_rate>20</update_rate>
                <topic>hc_sr04_left_distance</topic>
                <lidar>
                    <scan>
                        <horizontal>
                            <samples>1</samples>
                            <resolution>1</resolution>
                            <min_angle>0</min_angle>
                            <max_angle>0</max_angle>
                        </horizontal>
                        <vertical>
                            <samples>1</samples>
                            <resolution>1</resolution>
                            <min_angle>0</min_angle>
                            <max_angle>0</max_angle>
                        </vertical>
                    </scan>
                    <range>
                        <min>0.02</min>
                        <max>4.0</max>
                        <resolution>0.1</resolution>
                    </range>
                    <noise>
                        <type>gaussian</type>
                        <mean>0</mean>
                        <stddev>0.01</stddev>
                    </noise>
                </lidar>
            </sensor>
        </link>
        <link name="front_camera_link">
            <pose relative_to="base_link">0.096 0.0 -0.001 1.55 0 1.57</pose>
            <inertial>
                <mass>0.1</mass>
                <inertia>
                    <ixx>0.00003126</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.00003126</iyy>
                    <iyz>0</iyz>
                    <izz>0.00005445</izz>
                </inertia>
            </inertial>
            <visual name="visual">
                <geometry>
                    <mesh>
                        <uri>meshes/rp3_camera.dae</uri>
                    </mesh>
                </geometry>
            </visual>
            <sensor name="rpi_camera" type="camera">
                <pose> 0 0.02 -0.08 0 -1.57 -1.57</pose>
                <visualize>true</visualize>
                <topic>rpi_camera</topic>
                <camera>
                    <horizontal_fov>1.089</horizontal_fov>
                    <image>
                        <width>720</width>
                        <height>720</height>
                        <format>R8G8B8</format>
                    </image>
                    <clip>
                        <near>0.1</near>
                        <far>100</far>
                    </clip>
                </camera>
                <always_on>1</always_on>
                <update_rate>30.0</update_rate>
                <visualize>true</visualize>
                <topic>camera</topic>
            </sensor>

            <light name="right_flash" type="spot">
                <pose relative_to="base_link">0.098 -0.042 -0.027 -0.87 0 1.41</pose>
                <cast_shadows>1</cast_shadows>
                <visualize>false</visualize>
                <attenuation>
                    <range>3</range>
                    <linear>0.1</linear>
                    <constant>0.1</constant>
                    <quadratic>0.0025</quadratic>
                </attenuation>
                <diffuse>0.8 0.8 0.5 1</diffuse>
                <specular>0.8 0.8 0.5 1</specular>
                <spot>
                    <inner_angle>1.2</inner_angle>
                    <outer_angle>1.5</outer_angle>
                    <falloff>1</falloff>
                </spot>
                <direction>0 0 -1</direction>
            </light>
    
            <light name="left_flash" type="spot">
                <pose relative_to="base_link">0.098 0.042 -0.027 -0.87 0 1.78</pose>
                <cast_shadows>1</cast_shadows>
                <visualize>false</visualize>
                <attenuation>
                    <range>3</range>
                    <linear>0.1</linear>
                    <constant>0.1</constant>
                    <quadratic>0.0025</quadratic>
                </attenuation>
                <diffuse>0.8 0.8 0.5 1</diffuse>
                <specular>0.8 0.8 0.5 1</specular>
                <spot>
                    <inner_angle>1.2</inner_angle>
                    <outer_angle>1.5</outer_angle>
                    <falloff>1</falloff>
                </spot>
                <direction>0 0 -1</direction>
            </light>
        </link>

        <!-- Wheel visual and collision -->
        <link name="left_front_wheel_link">
            <pose relative_to="base_link"> 0.06 0.092 -0.012 -1.57 0 0</pose>
            <inertial>
                <mass>0.1</mass>
                <inertia>
                    <ixx>0.00003126</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.00003126</iyy>
                    <iyz>0</iyz>
                    <izz>0.00005445</izz>
                </inertia>
            </inertial>
            <visual name="wheel_visual">
                <pose>0 0 -0.012 0 0 0</pose>
                <geometry>
                    <mesh>
                        <uri>meshes/wheel.dae</uri>
                    </mesh>
                </geometry>
            </visual>
            <collision name="wheel_collision">
                <geometry>
                    <cylinder>
                        <radius>0.033</radius>
                        <length>0.022</length>
                    </cylinder>
                </geometry>
                <surface>
                    <contact>
                        <ode>
                            <kp>1e+07</kp>
                            <kd>1</kd>
                        </ode>
                    </contact>
                    <friction>
                        <ode>
                            <mu>0.5</mu>
                            <mu2>1</mu2>
                            <slip1>0.00062</slip1>
                            <slip2>0</slip2>
                            <fdir1>0 0 1</fdir1>
                        </ode>
                    </friction>
                </surface>
            </collision>
        </link>
        <link name="right_front_wheel_link">
            <pose relative_to="base_link"> 0.06 -0.092 -0.012 1.57 0 0</pose>
            <inertial>
                <mass>0.1</mass>
                <inertia>
                    <ixx>0.00003126</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.00003126</iyy>
                    <iyz>0</iyz>
                    <izz>0.00005445</izz>
                </inertia>
            </inertial>
            <visual name="wheel_visual">
                <pose>0 0 -0.012 0 0 0</pose>
                <geometry>
                    <mesh>
                        <uri>meshes/wheel.dae</uri>
